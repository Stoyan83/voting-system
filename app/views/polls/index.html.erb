<div class="container mt-4">
    <h1 class="mb-4" style="text-align: left;">Polls</h1>

  <div class="row">
    <% @polls.each do |poll| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm d-flex flex-column h-100">
          <div class="card-body d-flex flex-column">
            <h3 class="card-title text-primary"><%= poll.title %></h3>
            <p class="card-text text-muted"><%= poll.description %></p>
            <p class="text-muted"><small>Created on: <%= poll.created_at.strftime('%B %d, %Y') %></small></p>

            <div class="mt-auto">
              <div class="btn-group w-100" role="group" aria-label="Poll Actions">
                <%= link_to 'Vote', poll_path(poll), class: 'btn btn-outline-primary btn-sm w-50' %>
                <%= link_to 'Show Results', '#', class: 'btn btn-outline-secondary btn-sm w-50' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
