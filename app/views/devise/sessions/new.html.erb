<h2 class="text-center"><%= t('devise.sessions.new.title') %></h2>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, t('devise.sessions.new.email_label'), class: "form-label" %>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, t('devise.sessions.new.password_label'), class: "form-label" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, t('devise.sessions.new.remember_me_label'), class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit t('devise.sessions.new.submit_button'), class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= render "devise/shared/links" %>
          </div>

          <div class="mt-5">
            <h3 class="text-center">Quick Login</h3>
            <div class="d-flex flex-wrap justify-content-center">
              <% User.all.each do |user| %>
                <div class="col-3 m-1">
                  <%= button_to user.email, quick_login_path(email: user.email), method: :post, class: "btn btn-secondary w-100" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
