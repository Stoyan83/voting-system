<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><%= t('navbar.voting_system') %></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="<%= t('navbar.toggle_navigation') %>">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item active">
          <a class="nav-link" href="/"><%= t('navbar.home') %></a>
        </li>
      </ul>

      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= button_to t('navbar.sign_out'), destroy_user_session_path, method: :delete, class: 'btn btn-light' %>
          </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_session_path %>"><%= t('navbar.sign_in') %></a>
          </li>
        <% end %>
        <li class="nav-item d-flex align-items-center">
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="switch-view-toggle">
            <label class="form-check-label" for="switch-view-toggle">
              <%= t('navbar.modern_view') %>
            </label>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  $(document).ready(function() {
    $('#switch-view-toggle').prop('checked', false);

    $('#switch-view-toggle').on('change', function() {
      if ($(this).prop('checked')) {
        window.location.href = '/modern/home';
      }
    });
  });
</script>
